<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffa6aab3" />
                    <corners android:radius="4.0dip" />
                </shape>
            </item>
            <item android:left="0.5dip" android:top="0.5dip" android:right="0.5dip" android:bottom="0.5dip">
                <shape android:shape="rectangle">
                    <solid android:color="#ffffffff" />
                    <corners android:radius="4.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffa6aab3" />
                    <corners android:radius="4.0dip" />
                </shape>
            </item>
            <item android:left="0.5dip" android:top="0.5dip" android:right="0.5dip" android:bottom="0.5dip">
                <shape android:shape="rectangle">
                    <solid android:color="#ffffffff" />
                    <corners android:radius="4.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>