<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:left="0.5dip" android:top="0.5dip" android:right="0.5dip" android:bottom="0.5dip">
                <shape android:shape="rectangle">
                    <solid android:color="#ff8cb1e2" />
                    <corners />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="0.5dip" android:top="0.5dip" android:right="0.5dip" android:bottom="0.5dip">
                <shape android:shape="rectangle">
                    <solid android:color="#ffffffff" />
                    <corners />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>